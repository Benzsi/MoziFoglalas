<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mozi Foglalás</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <h1 class="mb-3"><%= message %></h1>

    <% if (typeof formData !== 'undefined') { %>
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Foglalás adatai:</h2>
          <p><strong>Név:</strong> <%= formData.nev %></p>
          <p><strong>E-mail:</strong> <%= formData.email %></p>
          <p><strong>Dátum és időpont:</strong> <%= formData.datum %></p>
          <p><strong>Létszám:</strong> <%= formData.fo %> fő</p>
        </div>
      </div>
    <% } else { %>
      <% if (typeof errors !== 'undefined' && errors.length) { %>
        <div class="alert alert-danger" role="alert">
          <ul class="mb-0">
            <% errors.forEach(function(err){ %>
              <li><%= err %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <form id="bookingForm" action="/submit_form" method="post">

        <div class="mb-3">
          <label for="nev" class="form-label">Név (kötelező)</label>
          <input type="text" class="form-control" id="nev" name="nev" required value="<%= (typeof old !== 'undefined' && old.nev) ? old.nev : '' %>">
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">E-mail cím (kötelező)</label>
          <input type="email" class="form-control" id="email" name="email" required pattern="^.+@.+$" value="<%= (typeof old !== 'undefined' && old.email) ? old.email : '' %>">
        </div>

        <div class="mb-3">
          <label for="datum" class="form-label">Dátum és időpont (kötelező)</label>
          <input type="datetime-local" class="form-control" id="datum" name="datum" required value="<%= (typeof old !== 'undefined' && old.datum) ? old.datum : '' %>">
        </div>

        <div class="mb-3">
          <label for="fo" class="form-label">Létszám (fő)</label>
          <input type="number" class="form-control" id="fo" name="fo" max="10" min="1" required value="<%= (typeof old !== 'undefined' && old.fo) ? old.fo : '' %>">
        </div>

        <button id="submitBtn" type="submit" class="btn btn-primary">Foglalás leadása</button>

      </form>
    <% } %>
  </div>

</body>
</html>
